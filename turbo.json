{
  "$schema": "https://turborepo.org/schema.json",
  "dangerouslyDisablePackageManagerCheck": true,
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "check": {
      "cache": false,
      "dependsOn": ["^check"]
    },
    "check:packagejson": {
      "cache": false,
      "dependsOn": ["^check:packagejson"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["^lint"]
    },
    "test:unit": {
      "cache": true,
      "dependsOn": ["^test:unit"]
    },
    "clean": {
      "cache": false,
      "dependsOn": ["^clean"]
    }
  },
  "remoteCache": {
    "enabled": false
  },
  "globalDependencies": ["tsconfig.base.json"]
}
