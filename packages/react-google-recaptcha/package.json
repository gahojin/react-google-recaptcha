{
  "name": "@gahojin-inc/react-google-recaptcha",
  "version": "2025.11.1",
  "description": "Hooks for Google ReCaptcha V3",
  "author": "GAHOJIN, Inc.",
  "license": "Apache-2.0",
  "sideEffects": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/gahojin/react-google-recaptcha.git",
    "directory": "packages/react-google-recaptcha"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "keywords": [
    "google-recaptcha",
    "google-recaptcha-v2",
    "google-recaptcha-v3",
    "react"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "rolldown -c",
    "prepublishOnly": "pnpm run build",
    "lint": "biome check --write .",
    "lint:ci": "biome ci .",
    "check": "tsc --noEmit",
    "check:packagejson": "attw --pack --profile esm-only .",
    "test": "vitest --watch",
    "test:unit": "vitest --passWithNoTests --run --coverage"
  },
  "dependencies": {},
  "devDependencies": {
    "react": "19.2.0"
  },
  "peerDependencies": {
    "react": "^18 || ^19"
  }
}
